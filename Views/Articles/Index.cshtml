@{
}

@foreach (var a in ViewBag.Articles)
{
    <h1>@a.Title</h1>
    <h1>@a.Content</h1>
    <h1>@a.Category.Title</h1>

    <form method="POST" action="/Articles/Delete">
        <input type="hidden" name="id" value="@a.Id">
        <button type="submit">Delete</button>
        </form>
}
